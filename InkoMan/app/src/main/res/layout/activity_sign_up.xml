<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@color/black"
    >
    <TextView
        android:layout_margin="10dp"
        android:id="@+id/signUp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/pink"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"

        />


    <EditText
        android:id="@+id/edt_SignUp_Name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/signUp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edt_bacground"
        android:drawableLeft="@drawable/ic_baseline_smoking_rooms_24"
        android:drawablePadding="20dp"
        android:hint="Enter Your Nik"
        android:textColor="@color/pink"
        android:textColorHint="@color/pink"

        />

    <EditText
        android:id="@+id/edt_SignUp_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/edt_SignUp_Name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edt_bacground"
        android:drawableLeft="@drawable/ic_baseline_smoking_rooms_24"
        android:drawablePadding="20dp"
        android:hint="Enter Your Email"
        android:textColor="@color/pink"
        android:textColorHint="@color/pink"

        />

    <EditText
        android:textColor="@color/pink"
        android:id="@+id/edt_SignUp_AccessCode"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/edt_SignUp_email"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edt_bacground"
        android:drawableLeft="@drawable/ic_baseline_smoking_rooms_24"
        android:drawablePadding="20dp"
        android:hint="Enter Access Code"
        android:textColorHint="@color/pink"

        />

    <EditText
        android:textColor="@color/pink"
        android:background="@drawable/edt_bacground"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/edt_SignUp_AccessCode"
        android:layout_marginTop="24dp"
        android:hint="Enter Your Password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/edt_SignUp_enterPass"
        android:textColorHint="@color/pink"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="20dp"
        />
    <EditText
        android:textColor="@color/pink"
        android:background="@drawable/edt_bacground"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/edt_SignUp_enterPass"
        android:layout_marginTop="24dp"
        android:hint="Repeat Your Password "
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/edt_SignUp_repPass"
        android:textColorHint="@color/pink"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="20dp"
        />

    <Button
        android:id="@+id/edt_SignUp_btnSignUp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_SignUp_repPass"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_bacground"
        android:text="Sign Up"
        android:textColor="@color/pink"
        android:textSize="20dp" />




</RelativeLayout>